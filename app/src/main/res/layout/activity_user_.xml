<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".User_Activity"
    android:background="@drawable/settings_screen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/loader"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="visible" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/settings"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:backgroundTint="#FFCF3D"
            android:src="@drawable/ic_settings_black_24dp"
            tools:ignore="RelativeOverlap" />

        <LinearLayout
            android:layout_below="@id/settings"
            android:id="@+id/mapLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_marginTop="35dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_margin="15dp"
                app:elevation="10dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/DistressSignal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mapLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="@string/help"
            android:visibility="visible" />
        <Button
            android:id="@+id/Attending_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/DistressSignal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/i_m_going"
            android:visibility="invisible" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hsv"
            android:visibility="invisible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/hsv_ll">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:id="@+id/call1"
                android:layout_marginTop="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="15dp"
                    tools:ignore="RelativeOverlap">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Name"
                        android:id="@+id/Volunteer_name1"
                        android:textSize="26sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Phone_number"
                        android:id="@+id/Volunteer_phone1"
                        android:textSize="26sp" />

                </LinearLayout>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_action_name"
                    android:id="@+id/callButton1"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="5dp"
                    android:background="#000000"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/call_button" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:id="@+id/call2"
                android:layout_marginTop="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="15dp"
                    tools:ignore="RelativeOverlap">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Name"
                        android:id="@+id/Volunteer_name2"
                        android:textSize="26sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Phone_number"
                        android:id="@+id/Volunteer_phone2"
                        android:textSize="26sp"

                        />

                </LinearLayout>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_action_name"
                    android:id="@+id/callButton2"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="5dp"
                    android:background="#000000"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/call_button" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:id="@+id/call3"
                android:layout_marginTop="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="15dp"
                    tools:ignore="RelativeOverlap">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Name"
                        android:id="@+id/Volunteer_name3"
                        android:textSize="26sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Phone_number"
                        android:id="@+id/Volunteer_phone3"
                        android:textSize="26sp"

                        />

                </LinearLayout>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_action_name"
                    android:id="@+id/callButton3"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="5dp"
                    android:background="#000000"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/call_button" />
            </RelativeLayout>
        </LinearLayout>

    </HorizontalScrollView>

    </RelativeLayout>

</ScrollView>